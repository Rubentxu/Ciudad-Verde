<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<gradient android:startColor="#00ade38c" 
			android:centerColor="#00275f04"
			android:endColor="#00060f01"
				android:angle="270" />
			<stroke android:width="1dp" android:color="#000000" />
			<corners android:radius="10dp" />

		</shape>
	</item>

	<item android:state_focused="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<gradient android:startColor="#eeade38c" 
			android:centerColor="#ee275f04"
			android:endColor="#ee060f01"
				android:angle="270" />
			<stroke android:width="1dp" android:color="#000000" />
			<corners android:radius="10dp" />

		</shape>
	</item>

	<item>
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<gradient android:startColor="#bbade38c" 
			android:centerColor="#bb275f04"
			android:endColor="#bb060f01"
				android:angle="270" />
			<stroke android:width="1dp" android:color="#000000" />
			<corners android:radius="10dp" />

		</shape>
	</item>
</selector>
