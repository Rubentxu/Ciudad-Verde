<?xml version="1.0" encoding="utf-8"?>
<com.cvcetic.ciudadverde.adapters.LineaListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iconparadatranvia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:src="@drawable/tranv" />

    <TextView
        android:id="@+id/direccionparadatranvia"
        style="@style/botones"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:text="Parada "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/distanciatranvia"
        style="@style/botones"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="7dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

</com.cvcetic.ciudadverde.adapters.LineaListItem>